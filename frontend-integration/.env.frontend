# IA-Ops Frontend Integration Configuration
# Copy this to ia-ops-docs/.env

# Frontend Portal Configuration
PORTAL_PORT=8845
PORTAL_HOST=0.0.0.0
FLASK_ENV=development
FLASK_DEBUG=true

# Backend Services Integration
SWAGGER_PORTAL_URL=http://localhost:8870
REPOSITORY_MANAGER_URL=http://localhost:8860
TASK_MANAGER_URL=http://localhost:8861
LOG_MANAGER_URL=http://localhost:8862
DATASYNC_MANAGER_URL=http://localhost:8863
GITHUB_RUNNER_MANAGER_URL=http://localhost:8864
TECHDOCS_BUILDER_URL=http://localhost:8865

# API Configuration
API_TIMEOUT=10
API_RETRY_COUNT=3
API_DOCS_ENABLED=true

# Testing Integration
VERITAS_BASE_URL=http://localhost:8870
TESTING_ENABLED=true

# MinIO Integration (existing)
MINIO_REST_API_URL=http://localhost:8848
MINIO_CONSOLE_URL=http://localhost:9899
MINIO_ENDPOINT=localhost:9898
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# Database Monitoring
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5434
POSTGRESQL_DB=iaops
REDIS_HOST=localhost
REDIS_PORT=6380

# Real-time Updates
WEBSOCKET_ENABLED=true
REFRESH_INTERVAL=30000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/frontend.log

# Security
CORS_ORIGINS=http://localhost:8845,http://localhost:8870
SESSION_SECRET_KEY=your-secret-key-here

# Feature Flags
ENABLE_REPOSITORY_MANAGEMENT=true
ENABLE_TASK_MANAGEMENT=true
ENABLE_LOG_MANAGEMENT=true
ENABLE_DATASYNC_MANAGEMENT=true
ENABLE_GITHUB_RUNNER_MANAGEMENT=true
ENABLE_TECHDOCS_MANAGEMENT=true
ENABLE_PERFORMANCE_MONITORING=true
